@import "./color_definition"

html, body
	width		100%
	height		100%
	margin		0
	padding		0
	background	#000000

div
	font-family:	"HelveticaNeue"

.MainContainer
	position	absolute
	width		100%
	height		100%

	.MainMenu
		display							inline-block
		vertical-align					top
		width							8.740234375%
		height							100%
		background						$color_yellow
		overflow						scroll
		-webkit-overflow-scrolling		touch

		> div
			width						100%
			border-bottom				solid 0.5px rgb(252, 172, 26)

		.Logo
			height						64px
		
		.Item
			height						70px
			text-align					center
			a
				text-decoration			none
			i
				margin-top				8px;
				font-size				42px;
				color					$color_black
			.Description
				margin-top				5px;
				font-size				8px;
				text-decoration			none
				color					$color_black

	.FunctionContainer
		position						relative
		display							inline-block
		vertical-align					top
		width							91.259765625%
		height							100%
		.FunctionMenuContainer
			display						inline-block
			vertical-align				top
			//width						29.296875%
			width						32.102728731%
			height						100%
			background					rgb(4, 4, 4)
			overflow					scroll
			-webkit-overflow-scrolling	touch
		.FunctionContentContainer
			position					relative
			display						inline-block
			vertical-align				top
			//width						61.96%
			width						67.897271269%
			height						100%
			background					rgb(29, 29, 29)
			overflow					scroll
			-webkit-overflow-scrolling	touch
			
			$head-area-height = 64px
			.HeadArea
				position				absolute
				top						0px
				left					0px
				width					100%
				height					$head-area-height
				.Title
					height				100%
					font-size			20px
					font-weight			bold
					color				$color_gray	
					padding-left		13px
					padding-top			32px	
			.ContentAreaContainer
				position				absolute
				left					0px
				width					100%
				top						$head-area-height
				bottom					0px
				.ContentArea
					min-height			100%
					background			url("../image/main_content_background.png") repeat
					background-size		70px 70px